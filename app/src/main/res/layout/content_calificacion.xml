<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Views.Calificacion"
    tools:showIn="@layout/activity_calificacion">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/lottieAnimationView2"
                android:layout_width="match_parent"
                android:layout_height="350dp"
                android:layout_weight="1"
                app:lottie_autoPlay="true"
                app:lottie_fileName="calificacion.json"
                app:lottie_imageAssetsFolder="assets"
                app:lottie_loop="true">

            </com.airbnb.lottie.LottieAnimationView>

            <TextView
                android:id="@+id/txt_nombre_accion_caificacion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="La 9 batalla"
                android:textColor="@android:color/black"
                android:textSize="24sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/btn_calificacion_1"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:visibility="visible"
                    app:srcCompat="@drawable/estrella_vacia"
                    tools:ignore="VectorDrawableCompat" />

                <ImageView
                    android:id="@+id/btn_calificacion_2"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:visibility="visible"
                    app:srcCompat="@drawable/estrella_vacia"
                    tools:ignore="VectorDrawableCompat" />

                <ImageView
                    android:id="@+id/btn_calificacion_3"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:visibility="visible"
                    app:srcCompat="@drawable/estrella_vacia"
                    tools:ignore="VectorDrawableCompat" />

                <ImageView
                    android:id="@+id/btn_calificacion_4"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:visibility="visible"
                    app:srcCompat="@drawable/estrella_vacia"
                    tools:ignore="VectorDrawableCompat" />

                <ImageView
                    android:id="@+id/btn_calificacion_5"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:visibility="visible"
                    app:srcCompat="@drawable/estrella_vacia"
                    tools:ignore="VectorDrawableCompat" />

            </LinearLayout>

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="250dp"
                android:layout_height="212dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:src="@mipmap/logofinal" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>