<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Views.Sitios.FormularioSitio"
    tools:showIn="@layout/activity_formulario_sitio">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="15dp">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Nombre"
                android:textColor="#8F8F8F"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/txt_nombre_sitio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                android:background="@drawable/style_inputs"
                android:ems="10"
                android:inputType="text"
                android:padding="12dp"
                android:textColor="@android:color/background_dark"
                android:textColorHint="#8A8282" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Descripcion"
                android:textColor="#8F8F8F"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/txt_descripcion_sitio"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                android:background="@drawable/style_inputs"
                android:ems="10"
                android:inputType="text"
                android:padding="12dp"
                android:textColor="@android:color/background_dark"
                android:textColorHint="#8A8282" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Latitud"
                android:textColor="#8F8F8F"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/txt_latitud_sitio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                android:background="@drawable/style_inputs"
                android:ems="10"
                android:inputType="number|text"
                android:padding="12dp"
                android:textColor="@android:color/background_dark"
                android:textColorHint="#8A8282" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Longitud"
                android:textColor="#8F8F8F"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/txt_longitud_sitio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:layout_weight="1"
                android:background="@drawable/style_inputs"
                android:ems="10"
                android:inputType="number|text"
                android:padding="12dp"
                android:textColor="@android:color/background_dark"
                android:textColorHint="#8A8282" />

            <Button
                android:id="@+id/btn_eliminar_sitio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/colorAccent"
                android:onClick="eliminarSitio"
                android:text="Eliminar sitio"
                android:visibility="gone" />

        </LinearLayout>
    </ScrollView>
</RelativeLayout>