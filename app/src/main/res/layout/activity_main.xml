<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    tools:context=".Views.MainActivity" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="25dp">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                app:srcCompat="@mipmap/tourimagen" />

            <EditText
                android:id="@+id/txt_usuario_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                android:background="@drawable/style_inputs"
                android:ems="10"
                android:hint="Usuario"
                android:inputType="textPersonName"
                android:padding="12dp"
                android:textColor="@android:color/background_dark"
                android:textColorHint="#8A8282" />

            <EditText
                android:id="@+id/txt_clave_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                android:background="@drawable/style_inputs"
                android:ems="10"
                android:hint="Clave"
                android:inputType="textPersonName"
                android:padding="12dp"
                android:textColor="@android:color/background_dark"
                android:textColorHint="#8A8282"/>

            <Button
                android:id="@+id/button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/holo_green_dark"
                android:text="INGRESAR"
                android:textColor="@android:color/background_light"
                android:onClick="login"/>

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="20dp"
                android:text="Ingresar como turista"
                android:textColor="#597930"
                android:textSize="18sp"
                android:textStyle="bold"
                android:onClick="entrarComoInvitado"/>

            <CheckBox
                android:id="@+id/checkBtnRecordar"
                style="@android:style/Widget.DeviceDefault.Light.CompoundButton.CheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Recordar mi opcion"
                android:textColor="#888888"
                android:buttonTint="@android:color/holo_green_dark"/>

        </LinearLayout>
    </ScrollView>
</RelativeLayout>